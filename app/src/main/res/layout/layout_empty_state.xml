<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/emptyStateContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/statsHeading"
    android:layout_above="@id/dots_indicator"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_time"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No Stats Yet!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#757575"
        android:lineSpacingExtra="4dp"
        android:text="Here's how to get started:\n\n• Set Scroll Interval (3-30 seconds)\n• Set Reel Limit (5-2000)\n• Choose from Instagram, YouTube, LinkedIn, or Snapchat\n\nStart scrolling to see your stats!"/>

</LinearLayout>